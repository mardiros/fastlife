{% from "globals.jinja2" import button %}
<div id="{{widget.id}}">
    <details open>
        <summary>
            <h4 class="inline font-sans text-3xl font-bold">{{widget.title}}</h4>
        </summary>
        {% if child %}
        {{ child }}
        {% else %}

        <div hx-sync="this">

            {% for typ in types %}
            {{
            button(
            typ.title,
            type="button",
            target="closest div",
            get=typ.get_url(name=widget.name),
            )
            }}
            {% endfor %}
        </div>
        {% endif %}
    </details>
</div>