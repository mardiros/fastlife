{# all the macros here are globals, avaiable in all templates #}


{% macro title(title="") %}
<h2
  class="block pb-4 font-sans text-xl font-bold leading-tight tracking-tight text-dull-900 md:text-4xl dark:text-white">
  {{- title -}}
  {%- if caller %}{{ caller() }}{% endif -%}
</h2>
{% endmacro %}

{% macro form() %}
<form class="space-y-4 md:space-y-6" hx-post="" method="post">
  {{ caller() }}
</form>
{% endmacro %}

{% macro link(label, href, target="#maincontent", swap="innerHTML") %}
<a href="{{href}}" hx-get="{{href}}" hx-target="{{target}}" hx-swap="{{innerHTML}}" hx-push-url="true"
  class="cursor-pointer px-4 py-2 text-sm font-medium text-dull-900 bg-white border-t border-b border-dull-200 hover:bg-dull-100 hover:text-primary-700 focus:z-10 focus:ring-2 focus:ring-primary-700 focus:text-primary-700 dark:bg-dull-700 dark:border-dull-600 dark:text-white dark:hover:text-white dark:hover:bg-dull-600 dark:focus:ring-primary-500 dark:focus:text-white">
  {{- label -}}
  {%- if caller %}{{ caller() }}{% endif -%}
</a>
{% endmacro %}

{% macro button(title, type="submit", full_width=false, name="action", value="submit") %}
<button type="submit" name="{{name}}" value="{{value}}"
  class="{% if full_width %}w-full{% endif %} text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
  {{- title -}}
</button>
{% endmacro %}

{% macro input(label, name, id, placeholder, value="", type="text", required=false) %}
<div>
  <label for="{{id}}" class="block mb-2 text-sm font-medium text-dull-900 dark:text-white">
    {{label}}
  </label>
  <input type="{{type}}" name="{{name}}" id="{{id}}" value="{{value}}"
    class="bg-dull-50 border border-dull-300 text-dull-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-dull-700 dark:border-dull-600 dark:placeholder-dull-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
    placeholder="{{placeholder}}" {%if required%}required="" {%endif%}>
</div>
{% endmacro %}

{% macro checkbox(label, name, id, placeholder, checked=false) %}
<div class="flex items-center mb-4">
  <input type="checkbox" name="{{name}}" id="{{id}}" {% if checked %}checked="" {% endif %}
    class="w-4 h-4 text-primary-600 bg-dull-100 border-dull-300 rounded focus:ring-primary-500 dark:focus:ring-primary-600 dark:ring-offset-dull-800 focus:ring-2 dark:bg-dull-700 dark:border-dull-600"
    placeholder="{{placeholder}}" {%if required%}required="" {%endif%}>
  <label for="{{id}}" class="block ml-2 text-sm font-medium text-dull-900 dark:text-white">
    {{label}}
  </label>
</div>
{% endmacro %}

{% macro hidden(name, value) %}
<div>
  <input type="hidden" name="{{name}}" value="{{value}}">
</div>
{% endmacro %}